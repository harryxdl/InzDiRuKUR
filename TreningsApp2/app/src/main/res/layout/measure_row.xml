<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:alpha="0.7"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tbDate_measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:alpha="1"
                android:text="Data: 22.10.2017 "
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tbMeasureWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:alpha="1"
                android:text="Waga: 85kg"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tbMeasureWaist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:alpha="1"
                android:text="Talia: 80cm"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tbMeasureChest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Klatka piersiowa: 80cm "
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tbMeasureBiceps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Biceps: 20cm"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tbMeasureThigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Biceps: 40cm"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:alpha="0.7"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emptyFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/progres1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="+ 0.1"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/progres2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="+ 0.1"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/progres3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="+ 0.1"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/progres4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="+ 0.1"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/progres5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="+ 0.1"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
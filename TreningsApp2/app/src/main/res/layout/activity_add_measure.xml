<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.kamil.treningsapp.Framgents.AddMeasure">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="140dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="Waga" />

            <EditText
                android:id="@+id/tbAddWeight"
                android:layout_width="67dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned|phone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="140dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="Talia" />

            <EditText
                android:id="@+id/tbAddWaist"
                android:layout_width="67dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="140dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="Klatka piersiowa" />

            <EditText
                android:id="@+id/tbAddChest"
                android:layout_width="67dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberSigned" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="140dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="Biceps" />

            <EditText
                android:id="@+id/tbAddBiceps"
                android:layout_width="67dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="140dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Udo" />

            <EditText
                android:id="@+id/tbAddThigh"
                android:layout_width="67dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/btnAddMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                app:cardBackgroundColor="#EF5350"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                card_view:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Zapisz"
                    android:textColor="#ffffff"
                    android:textSize="16dp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kamil.treningsapp.Framgents.ShowCalcNutri">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btnMeasureFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="Wyliczone zapotrzebowanie"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tbxEnergy_Value"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:text="Kalorie:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tbxProtein_Value"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#000000"
                    android:text="Kalorie:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tbxCarbo_Value"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#000000"
                    android:text="Kalorie:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tbxFat_Value"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#000000"
                    android:text="Kalorie:"
                    android:textSize="18sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/idPieChart"
                    android:layout_width="match_parent"
                    android:layout_height="326dp">

                </com.github.mikephil.charting.charts.PieChart>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
